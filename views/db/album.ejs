<!doctype html>
<html>
  <head>
    <title>Bluemixer::Album</title>
    <link rel="stylesheet" href="/css/album.css" />
  </head>
  <body>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/album">Album</a></li>
    </ul>
    <h1>Photo Album</h1>
    <form method="post" action="/album">
      <input type="text" name="url" placeholder="url"/>
      <input type="text" name="title" placeholder="title"/>
      <button>Add Photo</button>
    </form>

    <% for(var i = 0; i < rows.length; i++) { %>
      <div class="photo">
        <img src="<%= rows[i].doc.url %>" />
        <div class="title"><%= rows[i].doc.title %></div>
        <form method="post" action="/album?_method=delete">
          <input type="hidden" name="id" value="<%= rows[i].doc._id %>" />
          <input type="hidden" name="rev" value="<%= rows[i].doc._rev %>" />
          <button>x</button>
        </form>
      </div>
    <% } %>

  </body>
</html>
